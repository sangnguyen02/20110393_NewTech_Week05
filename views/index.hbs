<!DOCTYPE html>
<html>
<head>
  <title>Blog - Danh sách bài viết</title>
  <link rel="stylesheet" href="/css/index.css">
</head>
<body>
  {{> header}}
  <ul>
    {{#each posts}}
      <li>
        <a href="/blog/post/{{this.id}}">{{this.title}}</a>
        <form action="/blog/delete/{{this.id}}" method="POST">
          <button type="submit">Xóa</button>
        </form>
        <a href="/blog/edit/{{this.id}}">Sửa</a>
      </li>
    {{/each}}
  </ul>
  <a href="/blog/new">Tạo bài viết mới</a>
  {{> footer}}
</body>
</html>
